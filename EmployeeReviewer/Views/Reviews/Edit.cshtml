@model EmployeeReviewer.Review

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Review</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ReviewId)

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(model => model.EmployeeId, "Employee", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col">
            @Html.LabelFor(model => model.ReviewerId, "Reviewer", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ReviewerId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReviewerId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col">
            @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.CreateDate, "date", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Summary, 20, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(model => model.EmployeeSigned, htmlAttributes: new { @class = "control-label" })
            <div class="checkbox">
                @Html.EditorFor(model => model.EmployeeSigned, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmployeeSigned, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col">
            @Html.LabelFor(model => model.EmployerSigned, htmlAttributes: new { @class = "control-label" })
            <div class="checkbox">
                @Html.EditorFor(model => model.EmployerSigned, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmployerSigned, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col">
            @Html.LabelFor(model => model.ReviewType, "ReviewType", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ReviewType", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReviewType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
            <input type="submit" value="Save" class="btn btn-success mr-2" />
            <a href="@Url.Action("Index", "Reviews")" class="btn btn-dark">Back to List</a>
    </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
